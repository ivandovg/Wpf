    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <InkCanvas x:Name="inkCanvas" EditingMode="Ink"/>

        <UniformGrid Grid.Row="1">
            <UniformGrid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="15 5"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </UniformGrid.Resources>

            <Button x:Name="btnInk" Content="Ink" Click="btnInk_Click" Tag="1"/>
            <Button x:Name="btnSelect" Content="Select" Click="btnInk_Click" Tag="2"/>
            <Button x:Name="btnEraseByStroke" Content="Erase By Stroke" Click="btnInk_Click" Tag="3"/>
            <Button x:Name="btnEraseByPoint" Content="Erase By Point" Click="btnInk_Click" Tag="4"/>
        </UniformGrid>
    </Grid>
